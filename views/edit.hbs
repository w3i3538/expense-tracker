<h1 class="mb-1 show-title">編輯支出</h1>
<div class="container">
    <form action="/record/{{record._id}}?_method=PUT" method="POST">

        <div class="mb-3">
            <label for="name" class="form-label">名稱<span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="name" name="name" value="{{record.name}}" required>
        </div>

        <div class="mb-3">
            <label for="categoryId" class="form-label">分類<span class="text-danger">*</span></label>
            <select type="text" class="form-control" id="categoryId" list="categoryOptions" name="categoryId"
                 required>

                <option value="{{record.categoryId._id}}">{{record.categoryId.category}}</option>
                {{#each categories}}
                <option value="{{ this.id }}">{{ this.category }}</option>
                {{/each}}

            </select>
        </div>

        <div class="mb-3">
            <label for="date" class="form-label">日期<span class="text-danger">*</span></label>
            <input type="date" class="form-control" id="date" name="date" value="{{dateNoTime record.date}}" required>
        </div>

        <div class="mb-3">
            <label for="amount" class="form-label">花費<span class="text-danger">*</span></label>
            <input type="number" class="form-control" id="amount" name="amount" value="{{record.amount}}" required
                min="0">
        </div>


        <div class="text-center">
            <button type="submit" class="btn btn-primary">
                確認編輯
            </button>

            <a type="button" class="btn btn-secondary" href="javascript:history.back()">
                返回前頁
            </a>

            <button type="reset" class="btn btn-danger">重新編輯</button>
        </div>
    </form>
</div>